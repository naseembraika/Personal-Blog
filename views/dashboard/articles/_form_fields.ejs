<div class="form-group">
    <label for="title">Title</label>
    <input type="text" name="title" id="title" class="form-control" value="<%= articleData.title %>">
</div>
<div class="form-group">
    <label for="description">Description</label>
    <textarea name="description" id="description" class="form-control"><%= articleData.description %></textarea>
</div>
<div class="form-group">
    <label for="markdown">Markdown</label>
    <textarea name="markdown" id="markdown" rows="10" class="form-control"><%= articleData.markdown %></textarea>
</div>
<div class="form-group">
    <label for="cover">Cover</label>
    <input type="file" name="cover" id="cover">
</div>

<a href="/dashboard" class="btn btn-secondary">Cancel</a>
<button type="submit" class="btn btn-primary">Save</button>